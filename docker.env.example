# Docker Environment Configuration
# Copy this file to .env and update the values

# Database Configuration (for docker-compose)
POSTGRES_USER=vbduser
POSTGRES_PASSWORD=vbdpassword
POSTGRES_DB=vbddb

# Cloudflare Tunnel Token
# Get this from: https://one.dash.cloudflare.com/
# 1. Go to Zero Trust > Networks > Tunnels
# 2. Create a tunnel
# 3. Copy the token
TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# App Configuration (used inside container)
DATABASE_URL=postgresql://vbduser:vbdpassword@db:5432/vbddb?schema=public
ORIGIN=https://your-domain.com
SESSION_SECRET=change-this-to-a-random-secret-key
NODE_ENV=production
BODY_SIZE_LIMIT=10M








